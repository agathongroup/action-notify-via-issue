{
  "name": "javascript-action",
  "version": "1.0.0",
  "description": "JavaScript Action Template",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write *.js",
    "format-check": "prettier --check *.js",
    "lint": "eslint .",
